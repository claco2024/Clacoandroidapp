<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"

    android:orientation="vertical"

    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:src="@drawable/ic_favorite_black_24dp"

        />


    <claco.store.customecomponent.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="No items yet"
        android:textColor="@color/myblack"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        app:font_name="NunitoRegular.ttf" />

    <claco.store.customecomponent.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="Simply browse and tap on heart icon."
        android:textColor="#848484"

        android:textSize="@dimen/_11sdp"
        app:font_name="NunitoRegular.ttf" />

    <claco.store.customecomponent.CustomButton
        android:id="@+id/btnBrowse"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="100dp"
        android:background="@color/colorPrimary"
        android:text="Continue Browsing"
        android:textColor="@color/white"
        app:font_name="NunitoSemiBold.ttf" />
</LinearLayout>
