<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/white"
    app:cardElevation="@dimen/_2sdp"
    >
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@color/white"
    app:cardElevation="@dimen/_5sdp"
    card_view:cardElevation="4dp"
    >


    <LinearLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_135sdp"

        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivProduct"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:scaleType="fitXY"

                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_2sdp"
                android:src="@drawable/placeholder11" />

            <RelativeLayout
                android:layout_width="@dimen/_56sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@color/per_bg"
                android:visibility="gone">

                <claco.store.customecomponent.CustomTextView
                    android:id="@+id/tvDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="64% OFF "
                    android:textColor="@color/per_off"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone"
                    app:font_name="NunitoRegular.ttf" />

            </RelativeLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tvProductName"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="0.7"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Buy Espoir Analog Blue Dial Men's Watch"
                        android:textColor="#333333"
                        android:textSize="@dimen/_9sdp"
                        app:font_name="NunitoSemiBold.ttf" />



                        <TextView
                            android:textAlignment="center"
                            style="@style/ganaral_edittext_style"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="end"
                            android:layout_weight="1.5"
                            android:background="@color/red_900"
                            android:gravity="center"
                            android:paddingRight="@dimen/_5sdp"
                            android:text="Buy Now"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8sdp"
                            app:font_name="NunitoSemiBold.ttf" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="left"
                    android:layout_marginBottom="@dimen/_5sdp">

                    <claco.store.customecomponent.CustomTextView
                        android:id="@+id/tvFinalprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:singleLine="true"
                        android:text="\u20B9 499 per pc"
                        android:textColor="@color/red_900"
                        android:textSize="@dimen/_9sdp"
                        app:font_name="NunitoSemiBold.ttf" />

                    <claco.store.customecomponent.CustomTextView
                        android:id="@+id/tvOldPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/tvFinalprice"
                        android:singleLine="true"
                        android:text=" \u20B9 1399"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/_9sdp"
                        android:visibility="gone" />

                    <claco.store.customecomponent.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/tvOldPrice"
                        android:singleLine="true"
                        android:text=" Save \u20B9 700"
                        android:textColor="@color/red_800"
                        android:textSize="@dimen/_8sdp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:orientation="vertical">

                        <claco.store.customecomponent.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Min. qty."
                            android:textColor="@color/myblack"
                            android:textSize="@dimen/_7sdp" />

                        <claco.store.customecomponent.CustomTextView
                            android:id="@+id/tvMinQty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\u2265 10"
                            android:textColor="#333333"
                            android:textSize="@dimen/_8sdp"
                            app:font_name="NunitoBold.ttf" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>


</LinearLayout>