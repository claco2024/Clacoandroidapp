<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <include layout="@layout/header" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.5"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_68sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:weightSum="3">

                    <claco.store.customecomponent.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:text="LOGIN"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        app:font_name="NunitoRegular.ttf" />

                    <claco.store.customecomponent.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="PAYMENT"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        app:font_name="NunitoRegular.ttf" />

                    <claco.store.customecomponent.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="COMPLETE"
                        android:textColor="@color/grey_700"
                        android:textSize="@dimen/_10sdp"
                        app:font_name="NunitoRegular.ttf" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/enable" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/enable" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/grey_600" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/disable" />


                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <claco.store.customecomponent.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Your Delivery Address"
                        android:textColor="@color/black_trans"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoSemiBold.ttf" />

                    <claco.store.customecomponent.CustomTextView
                        android:id="@+id/tv_forgot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Forgot password ?"
                        android:textColor="@color/black_trans"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="gone"
                        app:font_name="NunitoSemiBold.ttf" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_5sdp"
                    app:cardMaxElevation="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/_17sdp"
                                    android:layout_height="@dimen/_17sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:background="@drawable/ic_house" />

                                <claco.store.customecomponent.CustomTextView
                                    android:id="@+id/tvName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:text="Select Address"
                                    android:textColor="#333333"
                                    app:font_name="NunitoRegular.ttf" />

                            </LinearLayout>

                            <claco.store.customecomponent.CustomTextView
                                android:id="@+id/tvChange"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:gravity="center"
                                android:text="Change"
                                android:textColor="@color/red_900"
                                android:textSize="@dimen/_11sdp" />

                        </RelativeLayout>

                        <claco.store.customecomponent.CustomTextView
                            android:id="@+id/tvAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:maxLines="2"
                            android:text="No Address Selected"
                            android:textColor="@color/grey_600"
                            android:textSize="@dimen/_12sdp"
                            app:font_name="NunitoRegular.ttf" />

                        <claco.store.customecomponent.CustomTextView
                            android:id="@+id/tvPhoneNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:text=""
                            android:textColor="@color/grey_700"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="NunitoRegular.ttf" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <claco.store.customecomponent.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="Selected Delivery Slot"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoSemiBold.ttf" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/tvTimeslot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text=""
                            android:textSize="@dimen/_10sdp" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">


                    <claco.store.customecomponent.CustomTextView
                        android:id="@+id/tvCartItemCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="CART ITEM(0)"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoSemiBold.ttf" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:scrollbars="vertical"
                    android:visibility="gone" />


                <RelativeLayout

                    android:id="@+id/rrApply"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">

                    <ImageView
                        android:id="@+id/ivImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/ic_discount" />


                    <claco.store.customecomponent.CustomTextView
                        android:id="@+id/tvApply"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/ivImg"
                        android:gravity="center_vertical"
                        android:text="Apply Coupon"
                        android:textColor="@color/red_900"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoRegular.ttf" />

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/next" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <claco.store.customecomponent.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:text="PRICE DETAILS"
                        android:textColor="@color/grey_600"
                        android:textSize="@dimen/_10sdp"
                        app:font_name="NunitoRegular.ttf" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_width_small"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@color/grey_light" />

                    <RelativeLayout
                        android:id="@+id/rr1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/v1">

                        <claco.store.customecomponent.CustomTextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="Price"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="NunitoRegular.ttf" />

                        <claco.store.customecomponent.CustomTextView
                            android:id="@+id/tvItemCount"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_toRightOf="@+id/textView12"
                            android:gravity="center_vertical"
                            android:text="(  Items)"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="NunitoRegular.ttf" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_toRightOf="@+id/tvItemCount"
                            android:gravity="center_vertical"
                            android:text="View"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="gone" />

                        <claco.store.customecomponent.CustomTextView
                            android:id="@+id/tvPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:paddingRight="@dimen/_10sdp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="NunitoRegular.ttf" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_below="@+id/rr1">

                        <claco.store.customecomponent.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="Delivery"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="NunitoRegular.ttf" />

                        <claco.store.customecomponent.CustomTextView
                            android:id="@+id/tvDelCharges"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:paddingRight="@dimen/_10sdp"
                            android:text="0.0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="NunitoRegular.ttf" />

                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_width_small"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@color/grey_light" />

                    <RelativeLayout
                        android:id="@+id/rrCoupon"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_below="@+id/rr1">

                        <claco.store.customecomponent.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="Coupon Applied"
                            android:textColor="@color/greenprice"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="NunitoRegular.ttf" />

                        <claco.store.customecomponent.CustomTextView
                            android:id="@+id/tvCouponAmt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:paddingRight="@dimen/_10sdp"
                            android:text="0"
                            android:textColor="@color/red_900"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="NunitoRegular.ttf" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_below="@+id/rr1"
                        android:visibility="gone">

                        <claco.store.customecomponent.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="Total GST"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="NunitoRegular.ttf" />

                        <claco.store.customecomponent.CustomTextView
                            android:id="@+id/tvGST"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:paddingRight="@dimen/_10sdp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="NunitoRegular.ttf" />

                    </RelativeLayout>

                    <View

                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_width_small"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@color/grey_light" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp">

                        <claco.store.customecomponent.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="GST"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="NunitoBold.ttf" />

                        <claco.store.customecomponent.CustomTextView
                            android:id="@+id/tvGstAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:paddingRight="@dimen/_10sdp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"
                            app:font_name="NunitoBold.ttf" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_width_small"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@color/grey_light" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp">

                        <claco.store.customecomponent.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="Amount Payable"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="NunitoBold.ttf" />

                        <claco.store.customecomponent.CustomTextView
                            android:id="@+id/tvTotalAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:paddingRight="@dimen/_10sdp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"
                            app:font_name="NunitoBold.ttf" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_width_small"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@color/grey_light" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:visibility="gone">

                        <claco.store.customecomponent.CustomTextView
                            android:id="@+id/tvSave"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="You will save \u20b9 698 on this order123."
                            android:textColor="@color/green_600"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="NunitoBold.ttf" />
                    </RelativeLayout>

                </LinearLayout>

                <claco.store.customecomponent.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:text="PAYMENT MODE"
                    android:textColor="@color/grey_600"
                    android:textSize="@dimen/_10sdp"
                    app:font_name="NunitoRegular.ttf" />

                <RelativeLayout
                    android:id="@+id/rrCod"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="bottom"
                    android:background="@color/white"
                    android:elevation="@dimen/_3sdp"
                    android:gravity="bottom">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        app:srcCompat="@drawable/ic_radio_button_checked" />

                    <claco.store.customecomponent.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@+id/imageView8"
                        android:layout_toLeftOf="@+id/imageView8"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:tag="Selected"
                        android:text="Cash on Delivery"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoRegular.ttf" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rrOnline"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/white"
                    android:elevation="@dimen/_3sdp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        app:srcCompat="@drawable/ic_radio_button_unchecked" />

                    <claco.store.customecomponent.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@+id/imageView9"
                        android:layout_toLeftOf="@+id/imageView9"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="Credit/Debit/Atm card"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="gone"
                        app:font_name="NunitoRegular.ttf" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_return_box"
                        android:padding="5dp"
                        android:text=" 100 % Replacement Guarantee" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:drawableLeft="@drawable/ic_open_box"
                        android:padding="5dp"
