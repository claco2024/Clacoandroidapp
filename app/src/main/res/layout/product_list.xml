<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_2sdp"
    android:layout_marginTop="4.0dp"
    android:layout_marginRight="@dimen/_2sdp"
    android:layout_marginBottom="4.0dp"
    android:background="@color/white"
    android:elevation="@dimen/_5sdp"
    card_view:cardCornerRadius="1dp">

    <LinearLayout
        android:id="@+id/layout_item"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_189sdp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp">

            <com.like.LikeButton
                android:id="@+id/ic_wishlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                app:anim_scale_factor="3"
                app:icon_size="@dimen/_13sdp"
                app:icon_type="heart" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivProduct"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_120sdp"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_2sdp"
                android:src="@drawable/placeholder11" />

            <RelativeLayout
                android:layout_width="@dimen/_56sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@color/red_700">

                <claco.store.customecomponent.CustomTextView
                    android:id="@+id/tvDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="64% OFF "
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    app:font_name="NunitoRegular.ttf" />

            </RelativeLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <claco.store.customecomponent.CustomTextView
                    android:id="@+id/tvProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:singleLine="true"
                    android:text="Buy Espoir Analog Blue Dial Men's Watch"
                    android:textColor="#333333"
                    android:textSize="@dimen/_11sdp"
                    app:font_name="NunitoSemiBold.ttf" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_gravity="left">


                    <claco.store.customecomponent.CustomTextView
                        android:id="@+id/tvFinalprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:singleLine="true"
                        android:text="\u20B9 499"
                        android:textColor="@color/greenprice"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoSemiBold.ttf" />


                    <claco.store.customecomponent.CustomTextView
                        android:id="@+id/tvOldPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/tvFinalprice"
                        android:singleLine="true"
                        android:text=" \u20B9 1399"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/_9sdp" />

                    <claco.store.customecomponent.CustomTextView
                        android:id="@+id/tvSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/tvOldPrice"
                        android:singleLine="true"
                        android:text=" Save \u20B9 700"
                        android:textColor="@color/red_800"
                        android:textSize="@dimen/_8sdp" />

                </RelativeLayout>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <claco.store.customecomponent.CustomTextView
                        android:id="@+id/tvVendorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:ellipsize="end"
                        android:maxEms="10"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Sold by Rashmi Dwivedi "
                        android:textColor="@color/red_900"
                        android:textSize="@dimen/_8sdp"
                        android:visibility="gone"
                        app:font_name="NunitoSemiBold.ttf" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <claco.store.customecomponent.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Min. qty."
                            android:textColor="@color/myblack"
                            android:textSize="@dimen/_6sdp" />

                        <claco.store.customecomponent.CustomTextView
                            android:id="@+id/tvQty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\u2265 10"
                            android:textColor="#333333"
                            android:textSize="@dimen/_8sdp"
                            app:font_name="NunitoBold.ttf" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
