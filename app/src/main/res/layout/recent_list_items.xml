<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"

        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@color/white"
        android:elevation="@dimen/_1sdp"
        card_view:cardCornerRadius="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:visibility="gone">

            <com.like.LikeButton
                android:id="@+id/ic_wishlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:anim_scale_factor="3"
                app:icon_size="@dimen/_13sdp"
                app:icon_type="heart" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivProduct"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:src="@drawable/placeholder11" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/llDiscount"
                android:layout_width="@dimen/_56sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@color/red_800"
                android:visibility="gone">

                <claco.store.customecomponent.CustomTextView
                    android:id="@+id/tvDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="64% OFF "
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    app:font_name="NunitoRegular.ttf" />

            </RelativeLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <claco.store.customecomponent.CustomTextView
                    android:id="@+id/tvProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:singleLine="true"
                    android:text="Buy Espoir Analog Blue Dial Men's Watch"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    app:font_name="NunitoRegular.ttf" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="left">


                    <claco.store.customecomponent.CustomTextView
                        android:id="@+id/tvFinalprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:singleLine="true"
                        android:text="\u20B9 499"
                        android:textColor="@color/greenprice"
                        android:textSize="@dimen/_10sdp"
                        app:font_name="NunitoRegular.ttf" />


                    <claco.store.customecomponent.CustomTextView
                        android:id="@+id/tvOldPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_toRightOf="@+id/tvFinalprice"
                        android:singleLine="true"
                        android:text=" \u20B9 1399"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/_9sdp" />

                    <claco.store.customecomponent.CustomTextView
                        android:id="@+id/tvSave"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_toRightOf="@+id/tvOldPrice"
                        android:singleLine="true"
                        android:text=" Save \u20B9 700"
                        android:textColor="@color/red_800"
                        android:textSize="@dimen/_8sdp"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <claco.store.customecomponent.CustomTextView
                        android:id="@+id/tvVendorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:ellipsize="end"
                        android:maxEms="10"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Sold by Rashmi Dwivedi "
                        android:textColor="@color/red_900"
                        android:textSize="@dimen/_8sdp"
                        android:visibility="gone"
                        app:font_name="NunitoSemiBold.ttf" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <claco.store.customecomponent.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Min. qty."
                            android:textColor="@color/myblack"
                            android:textSize="@dimen/_6sdp" />

                        <claco.store.customecomponent.CustomTextView
                            android:id="@+id/tvQty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\u2265 10"
                            android:textColor="#333333"
                            android:textSize="@dimen/_8sdp"
                            app:font_name="NunitoBold.ttf" />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlSize"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/rectangle_cart"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="ggg"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:src="@drawable/drop" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlAddtocart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_22sdp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/rectangle_cart"
                android:minWidth="@dimen/_50sdp">

                <TextView
                    android:id="@+id/tvAddtoCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Add"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout

                android:id="@+id/llAddtocart"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"

                android:visibility="gone">

                <ImageButton
                    android:id="@+id/cart_quant_minus"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_centerVertical="true"

                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toLeftOf="@+id/cart_item_number"
                    android:background="@null"
                    android:padding="@dimen/_7sdp"
                    android:tint="@color/colorPrimary"
                    app:srcCompat="@drawable/minus_circle" />

                <TextView
                    android:id="@+id/cart_item_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_toLeftOf="@+id/cart_quant_add"
                    android:text="1"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/cart_quant_add"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:padding="@dimen/_7sdp"
                    android:tint="@color/colorPrimary"
                    app:srcCompat="@drawable/plus_circle" />
            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>



