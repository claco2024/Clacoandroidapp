<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C3D5FD">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/ll_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C3D5FD"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:layout_marginTop="@dimen/_100sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:visibility="gone">

                    <com.airbnb.lottie.LottieAnimationView

                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_url="https://assets2.lottiefiles.com/packages/lf20_wsywufs8.json" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:drawablePadding="@dimen/_15sdp"
                        android:gravity="center_vertical"
                        android:text="@string/enaam"
                        android:textColor="@color/blue_900"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:drawablePadding="@dimen/_15sdp"
                    android:gravity="center_vertical"
                    android:text="@string/enaam"
                    android:textAlignment="center"
                    android:textColor="@color/blue_900"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:drawablePadding="@dimen/_15sdp"
                    android:gravity="center_vertical"
                    android:text="Your points "
                    android:textAlignment="center"
                    android:textColor="@color/blue_900"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_30sdp"

                    android:layout_marginRight="@dimen/_30sdp"
                    android:drawablePadding="@dimen/_15sdp"
                    android:gravity="center_vertical"
                    android:text="You will get exciting prize when Your points reaches 100."
                    android:textAlignment="center"
                    android:textColor="@color/blue_900"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/ll_text"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/bg_gift" />

        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
