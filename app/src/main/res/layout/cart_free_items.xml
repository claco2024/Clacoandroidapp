<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cart_item_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:adjustViewBounds="true"
            android:padding="@dimen/_5sdp"
            app:srcCompat="@drawable/placeholder11" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <claco.store.customecomponent.CustomTextView
                    android:id="@+id/tvProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1.8"
                    android:singleLine="false"
                    android:text="Buy Espoir Analog Blue Dial Men's Watch"
                    android:textColor="#333333"
                    android:textSize="@dimen/_11sdp"
                    app:font_name="NunitoRegular.ttf" />

                <ImageView
                    android:id="@+id/cart_item_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_weight=".2"
                    android:clickable="true"
                    android:visibility="gone"
                    app:srcCompat="@drawable/close" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="left">

                <claco.store.customecomponent.CustomTextView
                    android:id="@+id/tvFinalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="Free product "
                    android:textColor="@color/greenprice"
                    android:textSize="@dimen/_12sdp"
                    app:font_name="NunitoSemiBold.ttf" />

                <claco.store.customecomponent.CustomTextView
                    android:id="@+id/tvOldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/tvFinalprice"
                    android:singleLine="true"
                    android:text=" \u20B9  "
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone" />

                <claco.store.customecomponent.CustomTextView
                    android:id="@+id/tvSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/tvOldPrice"
                    android:singleLine="true"
                    android:text=" Save \u20B9  0"
                    android:textColor="@color/red_800"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_2sdp"
                android:singleLine="true"
                android:text="Size:"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:orientation="horizontal"
                android:visibility="gone">

                <claco.store.customecomponent.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="Quantity:"
                    android:textSize="@dimen/_11sdp" />

                <ImageButton
                    android:id="@+id/cart_quant_minus"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:padding="@dimen/_5sdp"
                    android:tint="@color/colorPrimary"
                    app:srcCompat="@drawable/minus_circle" />

                <TextView
                    android:id="@+id/cart_item_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="1" />

                <ImageButton
                    android:id="@+id/cart_quant_add"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:padding="@dimen/_5sdp"
                    android:tint="@color/colorPrimary"
                    app:srcCompat="@drawable/plus_circle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp">

                <TextView
                    android:id="@+id/tvDelCharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery in 1-2 days "
                    android:textColor="@color/myblack"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone" />

                <claco.store.customecomponent.CustomTextView
                    android:id="@+id/cart_item_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Free Delivery"
                    android:textColor="@color/greenprice"
                    android:textSize="@dimen/_11sdp"
                    android:visibility="gone"
                    app:font_name="NunitoRegular.ttf" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
